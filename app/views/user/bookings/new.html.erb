<article class='container-main'>
  <section class='container-sub-booking'>
    <div class='rooms-content'>
      <div class="booking-confirm">
        <h4>Confirm Booking</h4>

        Villa #<%= @room.id %>
        
        Check-in: <%= current_search.check_in %><br>
        Check-out: <%= current_search.check_out %><br><br>

        Total nights: <%= current_search.num_nights %><br>
        Price per night: $<%= @room.price %><br><br>

        Total cost: $<%= current_search.total_cost(@room.price) %>

        <%= button_to 'CONFIRM', new_user_booking_path, params: {room: room.id} %>
      </div>
    </div>
  </section>
</article>
