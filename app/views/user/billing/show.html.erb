<div class='profile-container'>
  <div class='welcome-message'>
    <%= render partial: "/user/header" %>
  </div>
  <article class='profile-main'>
    <%= render partial: "/user/nav_profile" %>
    <section class='profile-content'>
      <div class="profile-nav-bar">
        <h4><%= link_to 'Reservations', user_billing_index_path %> > #<%= @reservation.id %></h4>
      </div>

      <div class="row room-info-box">
        <div class="col">
          <%= image_tag @reservation.image, class: "profile-res-image"%>
        </div>
        <div class="col">
          <h4>Villa #<%= @reservation.room_id %></h4>
          <p><%= @reservation.description %></p>
        </div>
        <div class="col">
          <ul><br>
            <li>Number of beds: <%= @reservation.beds %></li><br>
            <li>Has river view? <%= if @reservation.beds == true then 'Yes 'else 'No' end %></li><br>
            <li>Complimentary breakfast, lunch and dinner</li><br>
            <li>WiFi throughout property</li><br>
            <li>Lots of activites and amenities</li>
          </ul>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col text-center">
          Check-in: <%= @reservation.check_in %><br>
          Check-out: <%= @reservation.check_out %><br><br>
          Price: $<%= @reservation.price %> per night
        </div>
        <div class="col text-center">
          <br><br>
          <h3>Total: $<%= @reservation.total_cost %></h3>
        </div>
      </div>
    </section>
  </article>
</div>
